<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="support"
            type="com.iwmstudio.belight.viewmodel.SupportActivityViewModel" />

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.iwmstudio.belight.utils.StatusBarView
            android:background="@drawable/gradient_primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:background="@drawable/gradient_primary"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

            <ImageView
                android:onClick="@{ () -> support.finish() }"
                android:src="@drawable/baseline_keyboard_arrow_left_white_24dp"
                android:layout_width="wrap_content"
                android:padding="16dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_gravity="center_vertical"
                android:text="Support"
                android:textSize="19sp"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="100dp"
                    app:cardElevation="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/support"
                        android:layout_width="wrap_content"
                        android:layout_height="250dp"/>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="18sp"
                        android:layout_marginTop="16dp"
                        android:gravity="center_horizontal"
                        android:text="Call support if needed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:gravity="center_horizontal"
                        android:textSize="22sp"
                        android:text="@{ support.phone }"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatButton
                    android:onClick="@{ () -> support.whatsappCall() }"
                    style="?android:attr/borderlessButtonStyle"
                    android:text="WhatsApp"
                    android:textColor="#fff"
                    android:drawableLeft="@drawable/baseline_whatsapp_white_24dp"
                    android:drawablePadding="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_teal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:onClick="@{ () -> support.telegramCall() }"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    style="?android:attr/borderlessButtonStyle"
                    android:text="Telegram"
                    android:drawableLeft="@drawable/telegram"
                    android:drawablePadding="6dp"
                    android:textColor="#fff"
                    android:background="@drawable/btn_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</layout>