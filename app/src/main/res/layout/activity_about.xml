<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="about"
            type="com.iwmstudio.belight.viewmodel.AboutActivityViewModel" />

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.iwmstudio.belight.utils.StatusBarView
            android:background="@drawable/gradient_primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:background="@drawable/gradient_primary"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{ () -> about.finish() }"
                android:padding="16dp"
                android:src="@drawable/baseline_keyboard_arrow_left_white_24dp" />

            <TextView
                android:layout_gravity="center_vertical"
                android:text="About"
                android:textSize="19sp"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/icon"
            android:layout_width="150dp"
            android:layout_height="150dp"/>

        <TextView
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:text="@{ about.about }"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:onClick="@{ () -> about.finish() }"
                android:layout_weight="0.7"
                android:layout_marginTop="12dp"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/btn_blue"
                android:layout_marginStart="12dp"
                android:text="Back"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="46dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:onClick="@{ () -> about.openContact() }"
                android:layout_weight="0.3"
                android:layout_marginTop="12dp"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/btn_primary"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:text="Contact us"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="46dp"/>

        </LinearLayout>

    </LinearLayout>

</layout>