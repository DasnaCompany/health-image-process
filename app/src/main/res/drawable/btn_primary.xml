<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape>
            <gradient
                android:startColor="#2d291f"
                android:endColor="#f10000" />
            <corners
                android:radius="20dp" />
            <padding
                android:left="10dp"
                android:right="10dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#2d291f"
                android:endColor="#f10000"/>
            <corners
                android:radius="20dp" />
            <padding
                android:left="10dp"
                android:right="10dp" />
        </shape>
    </item>

</selector>